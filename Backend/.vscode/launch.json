    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "attach",
            "name": "Spotivote Debug",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "address": "0.0.0.0",
            "port": 9001,
            "localRoot": "${workspaceFolder}",
            "remoteRoot": "/workspace",
            "trace": true,
            "restart": true,
            "sourceMaps": true
        }
    ]
}